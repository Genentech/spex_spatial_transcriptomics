{
    "name": "CLQ",
    "description": "Run CLQ on spatial graph",
    "stage": "3",
    "params":{
        "clust_col": {
            "name": "clust_col",
            "description": "The column in .obs with cluster identities",
            "type": "string",
            "required": true,
            "default": "leiden"
        },

        "radius": {
            "name": "radius",
            "description": "The radius used to construct the neighborhood content vector, in microns",
            "type": "float",
            "required": true,
            "default": 50
        },

        "clust_uniq": {
            "name": "clust_uniq",
            "description": "The method used for clustering (Leiden or Louvain)",
            "type": "list",
            "required": false,
            "default": []
        },

        "n_perms": {
            "name": "n_perms",
            "description": "The number of permutations to use for statistical testing",
            "type": "int",
            "required": true,
            "default": 1000
        }
    },

    "script_path": "CLQ",
    "return": {
        "CLQ": {
            "name": "CLQ",
            "type": "adata",
            "description": "h5ad with CLQ vectors"
        }
    },
    "depends_and_script": [
        "STclust", OR
        "Phenograph"  
    ],
    "libs": [
        "scanpy==1.9.3",
        "squidpy==1.2.3",
        "leidenalg==0.9.1",
        "multiprocessing"
    ]
}

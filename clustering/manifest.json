{
    "name": "Cluster ST data",
    "description": "Cluster ST data",
    "stage": "2",
    "params":{
        "spatial_weight": {
            "name": "spatial_weight",
            "description": "How much to weight spatial neighbor edges",
            "type": "float",
            "required": true,
            "default": 0.0
        },

        "resolution": {
            "name": "resolution",
            "description": "The resolution of the clustering",
            "type": "float",
            "required": true,
            "default": 1.3
        },

        "method": {
            "name": "method",
            "description": "The method used for clustering (Leiden or Louvain)",
            "enum": ["leiden", "louvain"],
            "type": "enum",
            "required": true,
            "default": "leiden"
        }
    },

    "script_path": "clustering",
    "return": {
        "STclust": {
            "name": "STclust",
            "type": "adata",
            "description": "Clustered h5ad"
        }
    },
    "depends_and_script": [
        "dimensionality_reduction"
    ],
    "conda": ["python=3.10"],
    "libs": [
        "scanpy==1.9.8",
        "pandas==2.2.0",
        "python-louvain==0.16",
        "anndata==0.10.5"
    ],
    "conda_pip": [
        "leidenalg==0.8.10"
    ]
}

        "differential_expression"
    ],
    "conda": ["python=3.11"],
    "libs": [
        "rpy2==3.5.11",
        "fftw",
        "cmake==3.28.3",
        "requests==2.31.0",
        "cython==3.0.8"
    ],
    "conda_pip": [
        "scanpy==1.9.4",
        "scvi-tools==1.0.3",
        "pegasuspy[all]==1.8.0",
        "fitsne==1.2.1",
        "jax==0.4.14",
        "jaxlib==0.4.14",
        "jaxtyping==0.2.21",
        "flax==0.7.4",
        "pandas==1.5.3",
        "decoupler==1.4.0"
    ]
}

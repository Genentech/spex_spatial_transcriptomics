{
    "name": "analyze_pathways",
    "description": "Pathway analysis",
    "stage": "1",
    "params":{
        "pathway_file": {
            "name": "pathway_file",
            "description": "A .csv file with gene weights for each pathway",
            "type": "string",
            "required": false,
            "default": "progeny.csv"
        }
    },
    "script_path": "analyze_pathways",
    "return": {
        "pathways":{
            "name": "pathway_data",
            "type": "adata",
            "description": "h5ad with .obsm['pathways']"
        }

    },
